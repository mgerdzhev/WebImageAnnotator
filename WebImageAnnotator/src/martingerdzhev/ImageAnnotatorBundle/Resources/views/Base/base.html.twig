{% extends 'ImageAnnotatorBundle:Base:core.html.twig' %}

{% trans_default_domain 'ImageAnnotatorBundle' %}

{% block base_content %}
	<!-- <div class="span12" -->
	{% block flashmessages %}
            {% for type, messages in app.session.flashbag.all %}
                <div class="row">
                    <div class="col-md-8 ia-flash-message-container">
                        {% for key, message in messages %}
                            <span class="label label-{{ type }}">
                                {{ message|trans({}, 'FOSUserBundle') }}
                            </span>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
    {% endblock flashmessages %}
    <div class="row">
	            {% block left_side_content %}
	            {% endblock left_side_content %}
	            
	            {% block content %}
	            {% endblock content %}
	            
	            {% block right_side_content %}
	            {% endblock right_side_content %}
	    </div>
    </div>
{% endblock base_content %}
