{% extends 'martingerdzhevImageAnnotatorBundle:_Base:base.html.twig' %}

{% trans_default_domain 'martingerdzhevImageAnnotatorBundle' %}

{% block title %}Edit Avatar{% endblock title %}

{% block content %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-success"><i class="fa fa-check"></i> Upload</button>
                <a class="btn btn-danger" href="{{ path('image_annotator_profile_me') }}"><i class="fa fa-times"></i> Cancel</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
