{% extends 'martingerdzhevImageAnnotatorBundle:_Base:base.html.twig' %}

{% trans_default_domain 'martingerdzhevImageAnnotatorBundle' %}

{% block title %}{{ profile.firstName }}'s Profile{% endblock title %}

{% block content %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <p class="lead">{{ profile.firstName }} {{ profile.lastName }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-2 col-md-4">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <p><img class="img-responsive center-block ia-avatar" src="{{ profile.avatar ? asset(profile.avatar.getResource.getWebPath) : asset('bundles/martingerdzhevimageannotator/img/no_avatar.jpg')}}" /></p>
                        {% if app.user == user.userName %}
                            <a class="btn btn-default btn-sm"    href="{{ path('image_annotator_profile_edit_avatar', {'userName': app.user}) }}">Edit Avatar</a>
                        {% endif %}
                    </div>
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <tbody>
                                    <tr>
                                        <th>{{ 'profile.show.userName'|trans }}</th>
                                        <td>{{ user.username }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ 'profile.show.institution'|trans }}</th>
                                        <td>{{ profile.institution }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ 'profile.show.city'|trans }}</th>
                                        <td>{{ profile.city }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ 'profile.show.country'|trans }}</th>
                                        <td>{{ profile.country }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {% if app.user == user.userName %}
                            <a class="btn btn-default" href="{{ path('image_annotator_profile_edit', {'userName': app.user}) }}">Edit Profile</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
