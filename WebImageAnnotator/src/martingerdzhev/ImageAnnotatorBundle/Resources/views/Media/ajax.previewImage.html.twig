{% extends 'ImageAnnotatorBundle:Media:preview.html.twig' %}

{% trans_default_domain 'ImageAnnotatorBundle' %}

{% block preview %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('.ia-media-preview img').on("click", function(e) {
                e.preventDefault();

                var element = $(this).parent();
                $tt.Core.Helper.toggleFullScreen(element);
            });

            $(document).on('fullscreenchange webkitfullscreenchange mozfullscreenchange MSFullscreenChange', function(e) {
                var element = $('.ia-media-preview img').parent();
                if ($tt.Core.Helper.isFullscreen()) {
                    element.addClass('ia-media-preview-fullscreen');
                } else {
                    element.removeClass('ia-media-preview-fullscreen');
                }
            });
        });
    </script>
{% endblock preview %}
