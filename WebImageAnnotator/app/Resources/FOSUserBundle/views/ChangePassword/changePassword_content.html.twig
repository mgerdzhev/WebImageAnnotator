{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-2">
			<form action="{{ path('fos_user_change_password', {'userName': app.user.username}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
			    {{ form_widget(form) }}
			    <div>
			        <input class="btn btn-success span1" type="submit" value="{{ 'change_password.submit'|trans }}" />
			    </div>
			</form>
		</div>
	</div>
</div>
